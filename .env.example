# Twitter provider: "twikit" (free) or "api" (paid official X API)
TWITTER_PROVIDER=twikit

# Twikit credentials (free — uses your X account login)
# Recommended: use a burner/alt account, not your main
TWITTER_USERNAME=your_x_username
TWITTER_EMAIL=your_x_email@example.com
TWITTER_PASSWORD=your_x_password
CAPSOLVER_API_KEY=  # Get from https://capsolver.com (needed for twikit Cloudflare bypass)

# Official X API (only needed if TWITTER_PROVIDER=api)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Scoring
ALPHA_THRESHOLD=0.6

# Ingestion
POLL_INTERVAL_SECONDS=60
BACKGROUND_INGESTION=false
TWITTER_SEARCH_QUERY=(crypto OR bitcoin OR ethereum OR $BTC OR $ETH OR $SOL OR stocks OR macro) -is:retweet

# Research cost controls
RESEARCH_MAX_TWEETS=25
SMART_MONEY_EXPAND_COUNT=5

# Telegram Group Monitoring (Telethon — for P/L analysis)
# Get credentials at https://my.telegram.org/apps
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=
TELEGRAM_MONITOR_GROUP=

# Database
DATABASE_URL=sqlite+aiosqlite:///alpha_bot.db

# Web
WEB_HOST=0.0.0.0
WEB_PORT=8888

# Research — CoinGecko (free, no key needed)
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# LLM Summarization (optional — leave blank to skip)
ANTHROPIC_API_KEY=
LLM_MODEL=claude-sonnet-4-5-20250929

# --- Auto-Trading (Maestro bot integration) ---
# Set TRADING_ENABLED=true to activate (disabled by default for safety)
TRADING_ENABLED=false
MAESTRO_BOT_USERNAME=MaestroSniperBot
TRADE_AMOUNT_SOL=0.1
TRADE_AMOUNT_BASE_ETH=0.0001
SLIPPAGE_BPS=500
MAX_OPEN_POSITIONS=10
MIN_LIQUIDITY_USD=5000.0
STOP_LOSS_PCT=-50.0
TAKE_PROFIT_1_PCT=200.0
TAKE_PROFIT_1_SELL_PCT=50.0
TAKE_PROFIT_2_PCT=400.0
TAKE_PROFIT_2_SELL_PCT=25.0
TAKE_PROFIT_3_PCT=900.0
TAKE_PROFIT_3_SELL_PCT=25.0
PRICE_POLL_INTERVAL=10
TRADE_COOLDOWN_SECONDS=30
# Comma-separated TG group usernames or IDs to monitor for calls
TELEGRAM_MONITOR_GROUPS=

# --- Scanner (Phase 1: Narrative Radar) ---
SCANNER_ENABLED=false
TREND_POLL_INTERVAL_SECONDS=1800
SCANNER_POLL_INTERVAL_SECONDS=300
SCANNER_CHAIN_FILTER=base
SCANNER_TIER1_THRESHOLD=75.0
SCANNER_TIER2_THRESHOLD=50.0
SCANNER_MIN_MCAP=10000.0
SCANNER_MAX_MCAP=10000000.0
SCANNER_MIN_LIQUIDITY=5000.0
DIGEST_HOUR_UTC=9
SCANNER_USE_CLAUDE_MATCHING=true
# Neynar (Farcaster API) — free tier, get key at https://neynar.com
NEYNAR_API_KEY=
